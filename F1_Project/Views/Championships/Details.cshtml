@model F1_Project.Models.ViewModel.DriverIndexData

@{
    ViewData["Title"] = "Details";
}

<div>    
    <a asp-controller="Rounds" asp-action="Index" asp-route-championshipid="@ViewData["ChampionshipId"]" class="btn btn-outline-info">Calendar</a>
    <a asp-action="Index" asp-controller="DriverTeams" asp-route-id="@ViewData["ChampionshipId"]" class="btn btn-outline-warning">Manage Drivers</a>
    <a asp-action="Edit" asp-route-id="@ViewData["ChampionshipId"]" class="btn btn-outline-secondary">Edit</a>
    <a asp-action="Delete" asp-route-id="@ViewData["ChampionshipId"]" class="btn btn-outline-danger">Delete</a>
    <a asp-action="Index" class="btn btn-primary">Back</a>
</div>
<hr />
<h4>Teams Participating:</h4>
<hr />
<div>

    <dl class="row">
        <dd class="col-sm-10">
            <ul>
                @foreach (var item in Model.Championships)
                {                    
                    if (item.Id == (int?)ViewData["ChampionshipId"])
                    {
                        @foreach (var team in item.ChampionshipTeams)
                        {
                            <li>@team.Team.FullName</li>
                        }
                    }                   
                }
            </ul>
        </dd>
    </dl>
</div>