@model  IEnumerable<F1_Project.Models.DriverTeam>

@{
ViewData["Title"]="Driver Team" ;
}

<p>
    <a asp-action="Create" class="btn btn-info">Assign a Driver / Team</a>
</p>
<table class="table">
    <thead>
        <tr>            
            <th>
                @Html.DisplayNameFor(model => model.InitialYear)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FinalYear)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Driver)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Team)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>            
            <td>
                @Html.DisplayFor(modelItem => item.InitialYear)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FinalYear)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Driver.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Team.FullName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-driverid="@item.DriverId" asp-route-teamid="@item.TeamId" class="btn btn-outline-secondary">Edit</a>
                <a asp-action="Delete" asp-route-driverid="@item.DriverId" asp-route-teamid="@item.TeamId" class="btn btn-outline-danger">Delete</a>                
            </td>
        </tr>
}
    </tbody>
</table>
