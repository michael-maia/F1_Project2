@model F1_Project.Models.DriverTeam

@{
    ViewData["Title"] = "Assign Driver";
}

<h4>Assign a Driver</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>          
            <input asp-for="Id" type="hidden" value="@ViewData["NewId"]"/>               
            <div class="form-group">
                <label asp-for="InitialYear" class="control-label">Initial Year</label>
                <input asp-for="InitialYear" class="form-control" />
                <span asp-validation-for="InitialYear" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FinalYear" class="control-label">Final Year</label>
                <input asp-for="FinalYear" class="form-control" value="@DateTime.Now.Year" />
                <span asp-validation-for="FinalYear" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DriverId" class="control-label">Driver</label>
                <select asp-for="DriverId" class ="form-control" asp-items="ViewBag.DriverId">                        
                </select>
            </div>
            <div class="form-group">
                <label asp-for="TeamId" class="control-label">Team</label>
                <select asp-for="TeamId" class ="form-control" asp-items="ViewBag.TeamId"></select>                
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" />
                <a asp-action="Index" asp-controller="Home" class="btn btn-primary">Back</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
