@model IEnumerable<F1_Project.Models.Circuit>

@{
    ViewData["Title"] = "Circuits List";
}

<h3>Circuits List</h3>

<p>
    <a asp-action="Create" class="btn btn-info">New Circuit</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Races Held
            </th>
            <th>
                Circuit Length
            </th>
            <th>
                Number Laps
            </th>            
            <th>
                Lap Record
            </th>            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberRacesHeld)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CircuitLength) km
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberLaps)
            </td>  
            <td>
                @Html.DisplayFor(modelItem => item.LapRecord)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-secondary">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>
