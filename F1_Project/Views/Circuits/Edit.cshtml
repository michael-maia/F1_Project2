@model F1_Project.Models.Circuit

@{
    ViewData["Title"] = "Edit circuit";
}

<h4>Edit Circuit</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="FullName" class="control-label">Name</label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberRacesHeld" class="control-label">Races Held</label>
                <input asp-for="NumberRacesHeld" class="form-control" />
                <span asp-validation-for="NumberRacesHeld" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CircuitLength" class="control-label">Circuit Length</label>
                <input asp-for="CircuitLength" class="form-control" />
                <span asp-validation-for="CircuitLength" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberLaps" class="control-label">number Laps</label>
                <input asp-for="NumberLaps" class="form-control" />
                <span asp-validation-for="NumberLaps" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="YearFirstRace" class="control-label">Date First Race</label>
                <input asp-for="YearFirstRace" class="form-control" />
                <span asp-validation-for="YearFirstRace" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LapRecord" class="control-label">Lap Record</label>
                <input asp-for="LapRecord" type="time" class="form-control" />
                <span asp-validation-for="LapRecord" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="col-6">
                <div class="form-group">
                    @if (Model.Photo != null)
                    {
                        <img src="@Url.Content(Model.Photo)" name="file" id="file" height="160" width="240" class="border border-secondary rounded" />
                    }
                    else
                    {
                        <img src="#" name="file" id="file" height="160" width="240" class="border border-secondary rounded" />
                    }
                </div>
                <div>
                    <div class="form-group">
                        <label asp-for="Photo" class="control-label"></label>
                        <input asp-for="Photo" type="file" class="form-control-file form-control-lg" name="file" id="file" onchange="LoadImage(this)" />
                        <span asp-validation-for="Photo" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
<script>
    function LoadImage(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function (e) {
                $("#file").attr('src', e.target.result).width(160).height(240);
            }
        }
        reader.readAsDataURL(input.files[0]);
    }
</script>
}
