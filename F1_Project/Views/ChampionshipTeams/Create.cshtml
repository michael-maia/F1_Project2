@model F1_Project.Models.ChampionshipTeam

@{
    ViewData["Title"] = "Add a Team";
}

<h4>Add a Team to the Championship</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Id" type="hidden" value="@ViewData["NewId"]" />
            <div class="form-group">
                <label asp-for="ChampionshipId" class="control-label">Championship Year</label>
                <select asp-for="ChampionshipId" class="form-control" asp-items="ViewBag.ChampionshipId"></select>
            </div>
            <div class="form-group">
                <label asp-for="TeamId" class="control-label">Team</label>
                <select asp-for="TeamId" class="form-control" asp-items="ViewBag.TeamId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" />
                <a asp-action="Index" asp-controller="Home" class="btn btn-outline-primary">Back to List</a>
            </div>
        </form>
    </div>
</div>

<div>
    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
